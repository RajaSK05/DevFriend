{
  "manifest_version": 2,
  "name": "Dev Friend",
  "version": "1.0.1",
  "description": "Dev Friend extension.",
  "icons": {
    "128": "DevFrnd128.png",
    "48": "DevFrnd48.png",
    "16": "DevFrnd16.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true 
  },
  "options_page": "index.html",
  "permissions": [
    "storage",
    "tabs",
    "contextMenus",
    "<all_urls>",
    "https://*/*"
  ]
}